<!-- Background Manager Start -->
{# ------ Overlay ------ #}
{% if has_overlay %}<div id="myatu_bgm_overlay" class="myatu_bgm_fs"></div>{% endif %}

{# ------ Full-size Image ------ #}
{% if is_fullsize %}
<img id="myatu_bgm_top" class="myatu_bgm_fs" src="{{ random_image.url }}" alt="{{ random_image.alt }}" />

<script type="text/javascript">
//<![CDATA[
(function($){
    $('#myatu_bgm_top').hide().imgLoaded(function() {
        $(this).fadeIn('slow');
    });
})(jQuery);
//]]>
</script>
{% endif %}

{# ------ Info Tab ------ #}
{% if has_info_tab %}
<div id="myatu_bgm_info">
    <div id="myatu_bgm_info_tab">
        {% if info_tab_link %}<a href="{{ random_image.link }}">{% endif %}
        [ + ]
        {% if info_tab_link %}</a>{% endif %}
    </div>

    {% if info_tab_desc %}
    <div id="myatu_bgm_info_tab_content">
        {% if info_tab_thumb %}
        <img src="{{ random_image.thumb }}" alt="{{ random_image.alt }}" />
        {% endif %}

        <h3>{{ random_image.caption }}</h3>
        <div id="myatu_bgm_info_tab_desc">{{ random_image.desc | raw }}</div>
    </div>
    {% endif %}
</div>
{% endif %}
<!-- Background Manager End -->
